{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="image" 
            style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
        <section class="infos">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome Completo</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Anivers√°rio</div>
                <div>{{ student.birth }}</div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{ student.school }}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                        <span>{{ student.classes }}</span>
                </div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in student.follow %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Aluno desde</div>
                <div>{{ student.created_at }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}