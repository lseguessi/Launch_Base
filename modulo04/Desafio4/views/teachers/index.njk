{% extends "layout.njk" %}

{% block content %}
    
    <div class="card">
        
        <table>
            <thead>
                <tr>
                    <th>Nome Completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url {{ teacher.avatar_url }}"> 
                                {{ teacher.name }}
                            </span>
                        </td>
                        <td> {{ teacher.follow }}</td>
                        <td>
                            <a href="/teachers/{{ teacher.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>       
        </table>

    </div>    

{% endblock content %}
