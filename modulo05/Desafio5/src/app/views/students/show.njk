{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="image" style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
        <section class="infos">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome Completo</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ student.email }}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{ student.age }}</div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>{{ student.class_year }}</div>
            </div>

            <div class="item">
                <div>Carga Horária de aulas particulares</div>
                <div>{{ student.hours }}
                    Horas</div>
            </div>

            <div class="item">
                <div>Aluno desde</div>
                <div>{{ student.created_at }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}