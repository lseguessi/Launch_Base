<div class="item">
    <div>Foto / Avatar</div>
    <input 
        type="url" 
        name="avatar_url"
        placeholder="https://"
        value="{{ teacher.avatar_url }}"
    >
</div>

<div class="item">
    <div>Nome Completo</div>
    <input 
        type="text" 
        name="name"
        placeholder="Nome do professor"
        value="{{ teacher.name }}"
    >
</div>
<div class="item">
    <div>Data de Nascimento</div>
    <input 
        type="date"
        name="birth_date"
        value="{{ teacher.birth }}"
    >
</div>
<div class="item">
    <div>Grau de Escolaridade</div>
    <select name="education_level">
        <option value="middle_complet">Ensino Médio Completo</option>

        <option value="superior_complet">Ensino Superior Completo</option>

        <option value="master">Mestrado</option>

        <option value="doctor">Doutorado</option>
    </select>
</div>

<div class="item">
    <div>Tipo de Aula</div>
    <div>
        <span><input type="radio" name="class_type" value="P" checked> Presencial</span>
        <span><input type="radio" name="class_type" value="D"> À Distância</span>
    </div>
</div>

<div class="item">
    <div>Área de atuação: </div>
    <div>
        <input 
            type="text" 
            name="subjects_taught"
            placeholder="Matemática, Física, Quimíca...etc"
            value="{{ teacher.subjects_taught }}"
        >
    </div>
</div>

<button type="submit">Salvar</button>