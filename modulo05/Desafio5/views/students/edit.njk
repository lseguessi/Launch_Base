{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="image" 
            style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
        <form method="POST" action="/students?_method=PUT">
            <section class="infos">
                <h3>Editar Estudante</h3>
                {% include "students/fields.njk" %}
                <input type="hidden" name="id" value="{{ student.id }}">
            </form>
            <form id="delet-form" method="post" action="/students?_method=DELETE">
                <button type="submit">Delete</button>
                <input type="hidden" name="id" value="{{ student.id }}">
            </form>
        </section>
    </div>

    {% include "confirm.njk" %}

{% endblock content %}